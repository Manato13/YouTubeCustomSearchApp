<?xml version="1.0" encoding="utf-8"?>
<!--リサイクルビューの中身の要素(cell)のレイアウト決める-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="horizontal"
android:layout_width="match_parent"
android:paddingLeft="20dp"
android:paddingTop="5dp"
android:paddingRight="20dp"
android:paddingBottom="5dp"
android:background="#000"
android:baselineAligned="false"
android:layout_height="wrap_content">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!-- 枠を入れる -->
    <ImageView
        android:background="#fff"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/description1"/>

    <ImageView
        android:id="@+id/image_view"
        android:src="@drawable/for_thumbnails"
        android:layout_margin="2dp"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:contentDescription="@string/description2"/>

</RelativeLayout>

<LinearLayout
    android:orientation="vertical"
    android:background="#cef"
    android:layout_weight="1"
    android:layout_width="0dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title_view"
        android:textSize="15sp"
        android:textColor="#00f"
        android:paddingStart="3dp"
        android:paddingEnd="3dp"
        android:paddingTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/viewC_view"
        android:textColor="#a0f"
        android:textSize="14sp"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:layout_gravity="center_vertical"
        android:autoLink="email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
</LinearLayout>